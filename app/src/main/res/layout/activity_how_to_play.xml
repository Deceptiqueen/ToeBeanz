<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="#000000"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#000000"
        android:fontFamily="casual"
        android:text="Toe Beanz"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#EF1E1E"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.061" />

    <ImageView
        android:id="@+id/pawImage"
        android:layout_width="250dp"
        android:layout_height="115dp"
        android:layout_below="@id/titleText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        app:srcCompat="@drawable/paw" />

    <Button
        android:id="@+id/homeBtn"
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:layout_below="@id/How"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:background="#5A5959"
        android:text="BACK"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/highScoreLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pawImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:fontFamily="casual"
        android:text="How To Play"
        android:textColor="#EF1E1E"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/How"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/highScoreLabel"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="20sp"
        android:layout_marginRight="30sp"
        android:fontFamily="casual"
        android:text="Toe Beanz is a memory game. Watch the sequence of colours carefully and repeat the pattern by clicking on the squares. If you mix up the order, you're out!"
        android:textColor="#2196F3"
        android:textSize="25sp"
        android:textStyle="bold|italic" />

</RelativeLayout>